{
  "name": "new-fastify-app",
  "version": "0.0.0",
  "main": "app/server.js",
  "dependencies": {
    "@uscreen.de/fastify-app": "^0.8.0",
    "env-schema": "^3.5.2",
    "fastify": "^3.2.0",
    "fastify-plugin": "^3.0.0",
    "fluent-json-schema": "^3.0.1",
    "hyperid": "^3.0.0"
  },
  "devDependencies": {
    "@uscreen.de/eslint-config-prettystandard-node": "^0.2.2",
    "lint-staged": "^12.3.3",
    "pino-pretty": "^7.5.1",
    "pm2": "^5.1.2",
    "prettier": "^2.0.5",
    "tap": "^15.1.6",
    "yorkie": "^2.0.0"
  },
  "scripts": {
    "start": "pm2 start pm2-dev.config.js",
    "stop": "pm2 delete pm2-dev.config.js",
    "logs": "pm2 logs new-fastify-app --raw | pino-pretty -t",
    "lint": "eslint '**/*.js' --fix",
    "test": "tap test/**/*.test.js",
    "test:cov": "tap --coverage-report=html test/**/*.test.js",
    "test:ci": "tap --coverage-report=text-summary test/**/*.test.js",
    "deploy": "pm2 deploy pm2.config.js",
    "postdeploy": "pm2 reload pm2.config.js"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix"
    ]
  }
}
