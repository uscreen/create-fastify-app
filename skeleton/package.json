{
  "name": "new-fastify-app",
  "version": "0.0.0",
  "main": "app/server.js",
  "dependencies": {
    "@uscreen.de/fastify-app": "^0.5.0",
    "env-schema": "^1.0.0",
    "fastify": "^3.2.0",
    "fastify-plugin": "^2.2.0",
    "fluent-schema": "^1.0.4",
    "hyperid": "^2.0.5"
  },
  "devDependencies": {
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "lint-staged": "^10.2.11",
    "pino-pretty": "^4.1.0",
    "pm2": "^4.4.0",
    "prettier": "^2.0.5",
    "tap": "^14.6.9",
    "yorkie": "^2.0.0"
  },
  "scripts": {
    "start": "pm2 start pm2-dev.config.js",
    "stop": "pm2 delete pm2-dev.config.js",
    "logs": "pm2 logs new-fastify-app --raw | pino-pretty -t",
    "lint": "eslint '**/*.js' --fix",
    "test": "tap test/**/*.test.js",
    "test:cov": "tap --coverage-report=html test/**/*.test.js",
    "test:ci": "tap --coverage-report=text-summary test/**/*.test.js",
    "deploy": "pm2 deploy pm2.config.js",
    "postdeploy": "pm2 reload pm2.config.js"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix"
    ]
  }
}
